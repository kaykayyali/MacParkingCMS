<section id="notes" class="bg-default" >
	<div class="container">
		<div class="row text-right visible-sm visible-md visible-lg visible-xl">
			<h2><small>Signed in as</small> <%= current_user.email%></h2>
		</div>
		<div class="row text-right visible-xs">
			<h4><small>Signed in as</small> <%= current_user.email%></h4>
		</div>
		<hr>
		<div class="row">
			<h2>Dashboard <small> Overview</small></h2>
			<div class="col-xs-12 calendar_wrapper">
				<% if current_user.role == "admin" %>
					<div id="calendar_view">
						
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
<script>
	$(document).ready(function() {
		$('#calendar_view').fullCalendar({
			dayClick: function(date, jsEvent, view) {
		         location.assign("/events/new/" + date.format())
		    },
		    eventClick: function(event) {
		    	// console.log(event)
		    	location.assign("/events/" + event.id + '/show');
		    },
		    events: '<%= event_feed_path %>',
   		})
   	})
</script>