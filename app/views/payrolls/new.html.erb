<section id="notes" class="bg-default" >
	<div class="container">
			<div class="row text-right visible-sm visible-md visible-lg visible-xl">
				<h2><%= current_user.email%></h2>
			</div>
			<div class="row text-right visible-xs">
				<h4><%= current_user.email%></h4>
			</div>
			<hr>
			<div class="row">
				<div class="col-xs-12 visible-sm visible-md visible-lg visible-xl">
					<h3>New Payroll</h3>
				</div>
				<div class="col-xs-12 visible-xs">
					<br>
					<h4>New Payroll</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<div class="form-group">
						<label>
							Employee name
						</label>
						<input class="form-control" id="employee_name" type="text" autofocus>
					</div>
					<div class="form-group">
						<label>
							Gross pay
						</label>
						<input class="form-control" id="pay_input" type="number">
					</div>
					<button class="btn btn-primary btn-block">Submit</button>
				</div>
			</div>
	</div>
</section>
<script >
$(function() {
	
	$('#employee_name').on('blur', function() {
		var name = $('#employee_name').val().split(' ');
		var corrected_name_array = [];
		name.forEach(function(word){
			word = word.toLowerCase()
			word = word.charAt(0).toUpperCase() + word.slice(1);
			corrected_name_array.push(word)
		})
		$('#employee_name').val(corrected_name_array.join(' '))
	})
})
</script>