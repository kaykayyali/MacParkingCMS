<section id="notes" class="bg-default" >
	<div class="container">
			<div class="row text-right visible-sm visible-md visible-lg visible-xl">
				<h2><small>Signed in as</small> <%= current_user.email%></h2>
			</div>
			<div class="row text-right visible-xs">
				<h4><small>Signed in as</small> <%= current_user.email%></h4>
			</div>
			<hr>
			<div class="row">
				<div class="col-xs-12">
					<button class="btn btn-primary btn-block" onclick="history.go(-1)">Back</button>
				</div>
				<div class="col-xs-12 visible-sm visible-md visible-lg visible-xl">
					<h3>View Event</h3>
				</div>
				<div class="col-xs-12 visible-xs">
					<br>
					<h5>View Event</h5>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-xs-6 col-md-6 lead">
					<label>Event Name</label>
					<br>
					<% if @event.event_name != "" %>
						<%= @event.event_name %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-6 col-md-6 lead">
					<label>Date</label>
					<br>
					<% if @event.date != nil %>
						<%= @event.date %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-12 col-md-6 lead">
					<label>Guests</label>
					<br>
					<% if @event.guest_count != "" %>
						<%= @event.guest_count %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-6 col-md-3 lead">
					<label>Start Time</label>
					<br>
					<% if @event.start_time != nil %>
						<%= @event.start_time.strftime("%I:%M %p") %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-6 col-md-3 lead">
					<label>End Time</label>
					<br>
					<% if @event.end_time != nil %>
						<%= @event.end_time.strftime("%I:%M %p") %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-12 col-md-12 lead">
					<label>Street Address</label>
					<br>
					<% if @event.street_address != "" %>
						<a href="http://maps.google.com/?q<%= @event.street_address %>" class="blue_no_hover"><%= @event.street_address %> </a>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-4 col-md-4 lead">
					<label>Zipcode</label>
					<br>
					<% if @event.zipcode != "" %>
						<%= @event.zipcode %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-4 col-md-4 lead">
					<label>City</label>
					<br>
					<% if @event.city != "" %>
						<%= @event.city %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-4 col-md-4 lead">
					<label>State</label>
					<br>
					<% if @event.state != "" %>
						<%= @event.state %>
					<% else %>
						Not Known
					<% end %>
				</div>
				<div class="col-xs-12 col-md-12 lead">
					<label>Notes</label>
					<br>
					<% if @event.notes != "" %>
						<%= @event.notes %>
					<% else %>
						None
					<% end %>
				</div>
				<div class="col-xs-4 col-md-6 lead">
					<label>Event Type</label>
					<br>
					<% if @event.event_type != "" %>
						<%= @event.event_type %>
					<% else %>
						Not Known
					<% end %>
				</div>
			</div>
	</div>
</section>