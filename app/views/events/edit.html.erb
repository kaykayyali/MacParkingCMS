<section id="notes" class="bg-default" >
	<div class="container">
		<div class="row text-right visible-sm visible-md visible-lg visible-xl">
			<h2><small>Welcome</small> <%= current_user.email%></h2>
		</div>
		<div class="row text-right visible-xs">
			<h4><small>Welcome</small> <%= current_user.email%></h4>
		</div>
		<hr>
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-primary btn-block" onclick="history.go(-1)">Back</button>
			</div>
			<div class="col-xs-12 visible-sm visible-md visible-lg visible-xl">
				<h3>Update an Event</h3>
			</div>
			<div class="col-xs-12 visible-xs">
				<br>
				<h5>Update an Event</h5>
			</div>
			<%= form_for(@event) do |f|-%>
				<div class="form-group col-md-6">
					<label>Event Name</label>
					<%= f.text_field :event_name,autofocus: true, class: "form-control" %>
				</div>
				<div class="form-group col-md-3">
					<label>Guest Count</label>
					<%= f.number_field :guest_count,autofocus: false, class: "form-control" %>
				</div>
				<div class="form-group col-md-3">
					<label>Price</label>
					<%= f.number_field :price,autofocus: false, class: "form-control" %>
				</div>
				<% if @date %>
					<div class="form-group col-md-4">
						<label>Date</label>
						<%= f.date_field 'date', @date, :class => "form-control" %>
					</div>
				<% else %>
					<div class="form-group col-md-4">
						<label>Date</label>
						<%= f.date_field :date, :class => "form-control" %>
					</div>
				<% end %>
				<div class="form-group col-md-4">
					<label>Start Time</label>
 					<input type="time" name ='start_time' class="form-control" value="<%= Time.now.strftime("%H:%M") %>">	
 				</div>
				<div class="form-group col-md-4">
					<label>End Time</label>
					<input type="time" name ='end_time' class="form-control" value="<%= Time.now.strftime("%H:%M") %>">
				</div>
				<div class="form-group col-md-6">
					<label>Contact Name</label>
					<%= f.text_field :contact_name,autofocus: false, class: "form-control" %>
				</div>
				<div class="form-group col-md-6">
					<label>Contact Number</label>
					<%= f.number_field :contact_number, :class => "form-control" %>
				</div>
				<div class="form-group col-md-12">
					<label>Street Address</label>
					<%= f.text_field :street_address, :class => "form-control" %>
				</div>
				<div class="form-group col-md-6">
					<label>Zipcode</label>
					<%= f.number_field :zipcode, :class => "form-control" %>
				</div>
				<div class="form-group col-md-3">
					<label>City</label>
					<%= f.text_field :city, :class => "form-control" %>
				</div>
				<div class="form-group col-md-3">
					<label>State</label>
					<%= f.text_field :state, :class => "form-control" %>
				</div>
				<div class="form-group col-md-12">
					<label>Notes</label>
					<%= f.text_area :notes, :class => "form-control" %>
				</div>
				<div class="form-group col-md-4">
					<label>Event Type</label>
					<br>
					<%= f.select :event_type, options_for_select([["General", "General"],["Wedding", "Wedding"], ["Private", "Private"], ["Close Quarters", "Close Quarters"]]), :class => "form-control" %>
				</div>
				<div class="form-group col-md-2">
					<label>Paid?</label>
					<br>
					<%= f.check_box :paid %>
 				</div>
 				<div class="form-group col-md-6">
					<label>File</label>
					<% if @event.excelfile %>
					<br>
						Currently attached: <%= @event.excelfile_identifier %>
					<% end %>		
					<%= f.file_field :excelfile%>
				</div>
				<%= submit_tag 'Save', :class => "btn btn-primary btn-block" %>
			<% end -%>
		</div>
	</div>
</section> 
