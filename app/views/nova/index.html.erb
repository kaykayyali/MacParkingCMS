<section id="notes" class="bg-default" >
	<div class="container">
		<div class="row text-right visible-sm visible-md visible-lg visible-xl">
			<h2>Nova Web Interface</h2>
		</div>
		<div class="row text-right visible-xs">
			<h4>Nova Web Interface</h4>
		</div>
		<hr>
		<div class="row bg-primary">
			<div class="col-xs-12 col-md-4">
				<h3>
					<a href="/nb">Bulletin Board</a>
					<% if current_user.present? && current_user.role == "admin" %>
						<ul class="list-inline pull-right">
							<li>
								<a href="<%= new_nova_bulletin_path %>" class="btn btn-success btn-xs">NEW</a>
							</li>
							<% if @bulletin %>
								<li>
									<a href="/nb/edit/<%= current_user.id %>/<%= @bulletin.id %>" class="btn btn-warning btn-xs">EDIT</a>
								</li>
								<li>
									<a href="/nb/del/<%= current_user.id %>/<%= @bulletin.id %>" class="btn btn-danger btn-xs">DELETE</a>
								</li>
							<% end %>
						</ul>
					<% end %>
				</h3>
				<div class="commentsArea">
					<div class="col-xs-12">
						<% if @bulletin %>
						<h4><%=@bulletin.title%></h4>
						<hr>
						<p> 
							<%=@bulletin.content%>
						</p>
						<% if @bulletin.created_by %>
								<h6><%=@bulletin.created_by%> </h6>
								<br>
							<% end %>
							<%= form_tag("/nb/addnbcomment/#{@bulletin.id}", method: "post") do %>
								<%= text_field_tag(:content, nil, class: "form-control") %> 
						 		<%= submit_tag("Comment", class: "btn btn-success btn-block") %>
							<% end %>	
						<div class="commentsBox">
							<% @bulletin.nbcomments.each do |comment| %>
								<% if current_user.id == comment.user_id %>
									<div class="col-xs-12 text-right nbcomment">
										<h5>Posted by me <button class="btn btn-danger btn-xs pull-left">x</button></h5>
										<p class="lead">
											<%= comment.content %>
										</p>
									</div>
								<% else %>
									<div class="col-xs-12 nbcomment">
										<h5><%= comment.user.email %> <small class="white-text">posted</small></h5>
										<p class="lead">
											<%= comment.content %>
										</p>
									</div>
								<% end %>
							<% end %>
						</div>
						<% else %>
						<h4>No Bulletins Posted</h4>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-md-8">
				<h3>Schedule of the week <button class="btn btn-warning btn-xs pull-right">Edit</button></h3>
				<div class="col-xs-12 text-center">
					<div class="table-responsive" style="margin-top: 30px">
						<table class="table table-bordered table-condensed" style="width:100%">
