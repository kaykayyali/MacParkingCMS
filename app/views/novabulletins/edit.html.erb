<section id="notes" class="bg-default" >
	<div class="container">
		<div class="row text-right visible-sm visible-md visible-lg visible-xl">
			<h2><small>New</small> Nova Bulletin</h2>
		</div>
		<div class="row text-right visible-xs">
			<h4><small>New</small> Nova Bulletin</h4>
		</div>
		<hr>
		<div class="row">
			<%= form_tag("/nb/update/#{current_user.id}/#{@bulletin.id}", method: "post") do %>
				<div class="col-xs-12 form-group">
					<%= label(nil, "Title") %>
					<%= text_field_tag(:title,  @bulletin.title  ,  class: "form-control") %> 
				</div>
				<div class="col-xs-12 form-group">
					<%= label(nil, "Content") %>
					<%= text_area_tag(:content, @bulletin.content, class: "form-control") %> 
				</div>
		 		<%= submit_tag("Submit Changes", class: "btn btn-success btn-block") %>
			<% end %>	
		</div>
	</div>
</section>